        <div class='modal-overlay js-modal-overlay'></div>

        <ol class='retro'>
    @foreach (var b in Model)
    {
        <li class='retro-item'>
            <a class='retro-link' href='#'>@b.Title</a>
            <ul class='retro-meta'>
                <li class='retro-meta-item'>
                    <em>Posted by:</em>
                    <a class='js-show-modal' href='#'>@b.Author</a>
                </li>
                <li class='retro-meta-item'>
                    <a href='#'>@b.Comments.Count() comments</a>
                </li>
                <li class='retro-meta-item'>
                    <a class='js-like' href='#'>Like this retro!</a>
                </li>
                

            </ul>
        </li>
    }
        </ol>
